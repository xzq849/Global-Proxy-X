# ASCII Configuration File
# Global configuration for sing-box proxy system

# ==========================================
# Basic Path Configuration
# ==========================================
SING_BOX_CONFIG_DIR="/etc/sing-box"
SING_BOX_CONFIG_FILE="/etc/sing-box/config.json"
SING_BOX_SECRET_FILE="/etc/sing-box/secret.key"
SUBSCRIPTION_DIR="/etc/sing-box/subscriptions"
BACKUP_DIR="/etc/sing-box/backup"
LOG_DIR="/var/log/sing-box"
LOG_FILE="/var/log/sing-box/sing-box.log"
SUBSCRIPTION_LOG_FILE="/var/log/sing-box/subscription.log"

# ==========================================
# Service Configuration
# ==========================================
SING_BOX_USER="sing-box"
SING_BOX_GROUP="sing-box"
SING_BOX_SERVICE="sing-box"
NGINX_SERVICE="nginx"

# ==========================================
# Network Configuration
# ==========================================
PROXY_PORT="7890"
CLASH_API_PORT="9090"
WEB_PORT="80"
BIND_ADDRESS="0.0.0.0"

# ==========================================
# API Configuration
# ==========================================
GITHUB_API_BASE="https://api.github.com/repos"
SING_BOX_REPO="SagerNet/sing-box"
ZASHBOARD_REPO="xzq849/zashboard"

# Connection Settings
CONNECT_TIMEOUT="10"
MAX_TIMEOUT="30"
RETRY_COUNT="3"
RETRY_DELAY="2"

# ==========================================
# System Configuration
# ==========================================
# Supported Operating Systems
SUPPORTED_OS=("ubuntu" "debian" "centos" "rhel" "fedora")

# 
SUPPORTED_ARCH=("amd64" "arm64" "armv7")

# 
MIN_MEMORY_MB="512"
MIN_DISK_MB="1024"

# ==========================================
# 
# ==========================================
# 
TEMP_DIR="/tmp/sing-box-install"

# 
MAX_BACKUPS="10"

# MB
MAX_LOG_SIZE="100"

# ==========================================
# 
# ==========================================
# 
VERBOSE_LOGGING="true"

# 
SHOW_PROGRESS="true"

# 
COLOR_OUTPUT="true"

# 
AUTO_BACKUP="true"

# 
CONFIGURE_FIREWALL="true"

# ==========================================
# 
# ==========================================
# 
PARALLEL_DOWNLOADS="3"

# API
API_CACHE_TIME="3600"

# 
HEALTH_CHECK_INTERVAL="30"

# 
SUBSCRIPTION_UPDATE_INTERVAL="6"