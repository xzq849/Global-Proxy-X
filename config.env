# Global configuration file
# Used to manage all script configuration parameters

# ==========================================
# Basic path configuration
# ==========================================
SING_BOX_CONFIG_DIR="/etc/sing-box"
SING_BOX_CONFIG_FILE="/etc/sing-box/config.json"
SING_BOX_SECRET_FILE="/etc/sing-box/secret.key"
SUBSCRIPTION_DIR="/etc/sing-box/subscriptions"
BACKUP_DIR="/etc/sing-box/backup"
LOG_DIR="/var/log/sing-box"
LOG_FILE="/var/log/sing-box/sing-box.log"
SUBSCRIPTION_LOG_FILE="/var/log/sing-box/subscription.log"

# ==========================================
# Service configuration
# ==========================================
SING_BOX_USER="sing-box"
SING_BOX_GROUP="sing-box"
SING_BOX_SERVICE_NAME="sing-box"

# ==========================================
# Network configuration
# ==========================================
DEFAULT_LISTEN_PORT="1080"
DEFAULT_HTTP_PORT="8080"
DEFAULT_MIXED_PORT="7890"
DEFAULT_API_PORT="9090"

# ==========================================
# Security configuration
# ==========================================
ENABLE_TLS="true"
TLS_CERT_PATH="/etc/sing-box/cert.pem"
TLS_KEY_PATH="/etc/sing-box/key.pem"

# ==========================================
# Subscription configuration
# ==========================================
SUBSCRIPTION_UPDATE_INTERVAL="3600"
SUBSCRIPTION_TIMEOUT="30"
SUBSCRIPTION_USER_AGENT="sing-box/1.0"

# ==========================================
# Logging configuration
# ==========================================
LOG_LEVEL="info"
LOG_MAX_SIZE="100M"
LOG_MAX_BACKUPS="5"
LOG_MAX_AGE="30"

# ==========================================
# Performance configuration
# ==========================================
MAX_CONNECTIONS="1000"
CONNECTION_TIMEOUT="30"
READ_TIMEOUT="15"
WRITE_TIMEOUT="15"

# ==========================================
# Update configuration
# ==========================================
AUTO_UPDATE="false"
UPDATE_CHECK_INTERVAL="86400"
BACKUP_BEFORE_UPDATE="true"

# ==========================================
# Dashboard configuration
# ==========================================
DASHBOARD_ENABLED="true"
DASHBOARD_PORT="9091"
DASHBOARD_SECRET=""

# ==========================================
# Proxy configuration
# ==========================================
PROXY_MODE="rule"
ALLOW_LAN="true"
BIND_ADDRESS="0.0.0.0"

# ==========================================
# DNS configuration
# ==========================================
DNS_ENABLED="true"
DNS_PORT="53"
DNS_UPSTREAM="8.8.8.8,1.1.1.1"

# ==========================================
# GeoIP and GeoSite configuration
# ==========================================
GEOIP_URL="https://github.com/SagerNet/sing-geoip/releases/latest/download/geoip.db"
GEOSITE_URL="https://github.com/SagerNet/sing-geosite/releases/latest/download/geosite.db"

# ==========================================
# Temporary directories
# ==========================================
TEMP_DIR="/tmp/sing-box-install"
DOWNLOAD_DIR="/tmp/sing-box-download"

# ==========================================
# Installation configuration
# ==========================================
INSTALL_PREFIX="/usr/local"
SYSTEMD_DIR="/etc/systemd/system"